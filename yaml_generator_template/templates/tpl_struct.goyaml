{{- define "k8s_pod" -}}
{{- $name := .Name -}}
{{- $namespace := .Namespace -}}
{{- $image := .Image -}}
{{- $image_name := .ImageName -}}
{{- $image_version := .ImageVersion -}}
apiVersion: v1
kind: Pod
metadata:
  name: {{ $name }}
  namespace: {{ $namespace }}
spec:
  containers:
  - name: {{ $image_name }}
    image: {{ $image -}}:   {{- $image_version }}
    ports:
    - containerPort: 80
{{- end }}
{{- define "k8s_namespace" }}
{{- $name := .Name -}}
{{- $namespace := .Namespace -}}
apiVersion: v1
kind: Namespace
metadata:
  name: {{ $name }}
  namespace: {{ $namespace }}
{{- end }}
  
  

    